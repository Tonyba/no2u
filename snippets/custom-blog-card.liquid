{% stylesheet %}
  .blog-card img {
    height: 194px;
    width: 100%;
    object-fit: cover;
  }

  .blog-card {
    box-shadow: 0px 4px 15px 0px #84848426;
  }

  .blog-card .blog-card__excerpt {
    font-size: 14px;
    margin: 12px 0;
  }

  .blog-card__content {
    padding: 20px 30px;
  }

  .blog-card h3 a {
    font-size: 16px;
    color: black;
    display: block;
  }

  .blog-card .blog-card__read-more {
    color: #ea4335;
    font-size: 14px;
    font-weight: 600;
  }

  .blog-card .blog-card__read-more .text {
    border-bottom: 1px solid;
  }

  .blog-card h3 {
    margin-bottom: 0;
  }
{% endstylesheet %}

<div class="blog-card">
  <a href="{{ article.url }}" class="blog-card__image-wrapper">
    {% if article.image != blank %}
      {{-
        article.image
        | image_url: width: 400, height: 250
        | image_tag: loading: 'lazy', decoding: 'async', draggable: false
      -}}
    {% endif %}
  </a>
  <div class="blog-card__content">
    <div class="card-cats flex flex-wrap"></div>
    <h3 class="blog-card__title">
      <a href="{{ article.url }}">{{ article.title }}</a>
    </h3>
    <p class="blog-card__excerpt">{{ article.excerpt_or_content | strip_html | truncate: 200 }}</p>
    <a href="{{ article.url }}" class="blog-card__read-more flex items-center">
      <span class="text">Read More</span>
      <span class="icon">{{ 'arrow.svg' | inline_asset_content }}</span>
    </a>
  </div>
</div>
