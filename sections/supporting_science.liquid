<div class="contained">
  <h2>{{ section.settings.title }}</h2>

  <div class="flex flex-wrap">
    {% for block in section.blocks %}
      <div class="col">
        <div class="science-item">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.desc }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Supporting with science",
  "class": "suporting-science",
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Supporting with science"
    }
  ]
}
{% endschema %}
