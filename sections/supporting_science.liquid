{% stylesheet %}
  .suporting-science {
    color: white;
  }

  .suporting-science {
    padding: 52px 0;
  }

  .suporting-science .suporting-science {
    padding: 16px 40px;
    background-color: #000000cc;
  }

  .suporting-science .science-item {
  }
{% endstylesheet %}

{{-
  section.settings.bg_img
  | image_url: width: section.settings.bg_img.width
  | image_tag: loading: 'lazy', decoding: 'async', draggable: false, class: 'section-bg-image'
-}}

<div class="contained">
  <h2>{{ section.settings.title }}</h2>

  <div class="flex flex-wrap">
    {% for block in section.blocks %}
      <div class="col">
        <div class="science-item">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.desc }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Supporting with science",
  "class": "suporting-science",
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Supporting with science"
    }
  ]
}
{% endschema %}
