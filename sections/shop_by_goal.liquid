
{% liquid 
    
    assign section_settings = section.settings

%}

<div>
    <div class="conained">

    <h2>{{ section_settings.title }}</h2>
    <p>{{ section_settings.subtitle }}</p>

    <div class="collections-grid cols-4 grid">
        {% for collection in section_settings.collection_list %}
            <div class="collection-item">
               
            </div>
        {% endfor %}

</div>


</div>


{% schema %}
{
  "name": "Shop By Goal",
  "class": "shop-by-goal",
  "settings": [
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 8
    }
  ],
  "presets": [
    {
      "name": "Shop by goal"
    }
  ]
}
{% endschema %}
