{% stylesheet %}
  .below-hero img {
    width: 30px;
  }

  .below-hero {
    padding-top: 30px;
    padding-bottom: 30px;
    font-weight: 600;
    font-size: 16px;
  }

  .below-hero .flex > * {
    position: relative;
  }

  .below-hero .flex > *:not(:last-child):after {
    content: '';
    width: 6px;
    height: 6px;
    background-color: #ea4335;
    border-radius: 100%;
    position: absolute;
    right: -75px;
    top: 50%;
    transform: translateY(-50%);
  }

  .subscribe-below-hero > .flex:not(:last-child):after {
    right: -50px;
  }

  .below-hero .white-ver {
    color: white;
  }

  @media only screen and (max-width: 1024px) {
    .below-hero .flex > *:not(:last-child):after {
      right: 20px;
    }
  }

  @media only screen and (max-width: 767px) {
    .below-hero .contained {
      gap: 100px;
    }

    .below-hero .flex {
      justify-content: center;
    }

    .below-hero .flex > *:not(:last-child):after {
      right: 50%;
      transform: translateX(-50%);
    }
  }
{% endstylesheet %}

<style>
  #shopify-section-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
  }
</style>

<div class="items-center justify-between contained flex {{ section.settings.css_class }} grid-t cols-2-t cols-1-m">
