    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "img_1",
      "label": "image 1"
    },
    {
      "type": "richtext",
      "id": "text_1",
      "label": "Text 1",
      "default": "<p></p>"
    },
    {
      "type": "image_picker",
      "id": "img_2",
      "label": "image 2"
    },
    {
      "type": "richtext",
      "id": "text_2",
      "label": "Text 2",
      "default": "<p></p>"
    },
    {
      "type": "image_picker",
      "id": "img_3",
      "label": "image 3"
    },
    {
      "type": "richtext",
      "id": "text_3",
      "label": "Text 3",
      "default": "<p></p>"
    },
    {
      "type": "image_picker",
      "id": "img_4",
      "label": "image 4"
    },
    {
      "type": "richtext",
      "id": "text_4",
      "label": "Text 4",
      "default": "<p></p>"
    }
  ],
  "presets": [
    {
      "name": "Below Hero"
    }
  ]
}
{% endschema %}
