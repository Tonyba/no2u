{% assign block_settings = block.settings %}

{% stylesheet %}
  .faqs .icon-plus {
    display: none;
  }

  .faqs accordion-custom {
    background-color: white;
    padding: 40px 30px;
  }
{% endstylesheet %}

<div class="grid cols-{{ block_settings.columns}} no-template-areas {{ section.settings.css_class }}">
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "faqs",
  "class": "faqs",
  "blocks": [
    {
      "type": "_accordion-row"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "number",
      "id": "columns",
      "label": "Columns",
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "FAQs"
    }
  ]
}
{% endschema %}
