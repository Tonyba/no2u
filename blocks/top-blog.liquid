{% liquid
  assign first_blog = blog.articles.first
  assign other_blogs = blog.articles
%}

{% stylesheet %}
  .big-article {
    width: 60%;
    padding-right: 55px;
    border-right: 1px solid var(--border-color);
  }

  h3,
  h2 {
    color: black;
  }

  h3 {
    font-size: 16px;
  }

  .big-article img {
    height: 287px;
    object-fit: cover;
  }

  .other-articles {
    width: 40%;
    padding-left: 48px;
  }
{% endstylesheet %}

<div class="h2">{{ block.settings.title }}</div>

<div class="flex">
  <div class="big-article">
    <a href="{{ first_blog.url }}">
      {{-
        first_blog.image
        | image_url: width: first_blog.image.width, height: 300
        | image_tag: loading: 'lazy', decoding: 'async', draggable: false
      -}}
    </a>
    <div class="meta flex">{{ first_blog.created_at | date: '%B %d, %Y' }}</div>
    <h3><a href="{{ first_blog.url }}"></a> {{ first_blog.title }}</h3>
    <p>{{ first_blog.excerpt_or_content | strip_html | truncate: 200 }}</p>

    <a href="{{ first_blog.url }}" class="flex items-center">
      <span class="text"> Read More </span>
      <span class="icon">{{ 'arrow.svg' | inline_asset_content }}</span>
    </a>
  </div>
  <div class="other-articles">
    {% for item in other_blogs limit: 2 offset: 1 %}
      <div class="flex">
        <div class="img">
          <a href="{{ first_blog.url }}">
            {{-
              item.image
              | image_url: width: first_blog.image.width, height: 150
              | image_tag: loading: 'lazy', decoding: 'async', draggable: false
            -}}
          </a>
        </div>
        <div class="content">
          <h3><a href="{{ first_blog.url }}"></a> {{ first_blog.title }}</h3>
          <p>{{ first_blog.excerpt_or_content | strip_html | truncate: 100 }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Top Blog",
  "class": "top-block",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Second Title"
    }
  ],
  "presets": [
    {
      "name": "Top blog"
    }
  ]
}
{% endschema %}
