{% stylesheet %}
  .starter-kit {
    background-color: #2a2a2a;
    color: white;
    padding: 20px;
  }

  .starter-kit .img {
    width: 35%;
  }

  .starter-kit img {
    object-fit: cover;
  }

  .starter-kit .details {
    width: 65%;
    font-size: 14px;
  }

  .starter-kit .flex {
    gap: 35px;
  }

  .starter-kit h3 {
    margin-bottom: 7px;
    font-size: 18px;
  }

  .starter-kit p {
    margin-top: 0;
    margin-bottom: 7px;
  }

  .starter-kit .sub-btn {
    background-color: var(--button-background-color);
    color: var(--color-primary-button-text);
    padding: 10px 25px;
  }
{% endstylesheet %}

<div class="flex items-center">
  <div class="img">
    {{- block.settings.img | image_url: width: 300 | image_tag: loading: 'lazy', decoding: 'async', draggable: false -}}
  </div>
  <div class="details">
    <h3>{{ block.settings.title }}</h3>
    <p>{{ block.settings.description }}</p>
    <div class="sub-btn w-100">{{ block.settings.btn_text }}</div>
  </div>
</div>

{% schema %}
{
  "name": "Starter Kit",
  "class": "starter-kit",
  "settings": [
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Tex"
    }
  ],
  "presets": [
    {
      "name": "Starter Kit"
    }
  ]
}
{% endschema %}
