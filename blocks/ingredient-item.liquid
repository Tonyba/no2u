{% stylesheet %}
{% endstylesheet %}

<div class="card-box">
  {{-
    block.settings.image
    | image_url: width: block.settings.image.width
    | image_tag: loading: 'lazy', decoding: 'async', draggable: false
  -}}
</div>

{% schema %}
{
  "name": "Ingredient Item",
  "class": "ingredient-item",
  "settings": [
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Ingredient Item"
    }
  ]
}
{% endschema %}
