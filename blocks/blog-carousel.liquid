{{ 'embla-styles.css' | asset_url | stylesheet_tag }}

{% stylesheet %}
  .blog-card img {
    height: 194px;
    width: 100%;
    object-fit: cover;
  }

  .blog-card .blog-card__excerpt {
    font-size: 14px;
    margin: 12px 0;
  }

  .blog-card__content {
    padding: 20px 30px;
  }

  .blog-card h3 a {
    font-size: 16px;
    color: black;
    display: block;
  }

  .blog-card .blog-card__read-more {
    color: #ea4335;
    font-size: 14px;
    font-weight: 600;
  }

  .blog-card .blog-card__read-more .text {
    border-bottom: 1px solid;
  }

  .blog-card h3 {
    margin-bottom: 0;
  }

  .custom-blog-carousel .embla__slide {
    padding-bottom: 4px;
  }

  .custom-blog-carousel {
    width: 100%;
  }

  .blog-card {
    box-shadow: 0px 4px 15px 0px #84848426;
  }
{% endstylesheet %}

<div class="embla cols-4">
  <div class="embla__viewport">
    <div class="embla__container">
      {% assign blog = block.settings.blog %}
      {% for article in blog.articles %}
        <div class="embla__slide">
          {% render 'custom-blog-card', article: article %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% render 'embla-scripts' %}

{% schema %}
{
  "name": "Blog Carousel",
  "class": "custom-blog-carousel",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Blog Carousel"
    }
  ]
}
{% endschema %}
