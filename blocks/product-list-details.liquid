{% stylesheet %}
  .metafield-single_line_text_field-array li {
    display: flex;
    gap: 12px;
    font-weight: bold;
    font-size: 14px;
    color: black;
  }
{% endstylesheet %}

{% assign product_list = product.metafields.custom.detail_list %}

<ul class="metafield-single_line_text_field-array">
  {% for item in product_list.value %}
    <li class="metafield-single_line_text_field">{{ item }}</li>
  {% endfor %}
</ul>

