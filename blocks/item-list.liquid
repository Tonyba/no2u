{% liquid
  assign block_settings = block.settings
%}

{%- capture children %}
  {% content_for 'blocks' %}
{% endcapture %}

{% stylesheet %}
  .item-list .icon {
    width: 38px;
  }
{% endstylesheet %}

<div class="grid cols-{{ block_settings.columns }} no-template-areas">
  {% for block in children %}
    {% render 'list_item', block: block %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Item List",
  "class": "item-list",
  "blocks": [
    {
      "type": "_list_item"
    }
  ],
  "settings": [
    {
      "type": "number",
      "id": "columns",
      "label": "Columns",
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Item List"
    }
  ]
}
{% endschema %}
