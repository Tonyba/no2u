{% liquid
  assign block_settings = block.settings
%}

<div class="grid cols-{{ block_settings.columns }}"></div>

{% schema %}
{
  "name": "Item List",
  "class": "item-list",
  "blocks": [],
  "settings": [
    {
      "type": "number",
      "id": "columns",
      "label": "Columns",
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Item List"
    }
  ]
}
{% endschema %}
